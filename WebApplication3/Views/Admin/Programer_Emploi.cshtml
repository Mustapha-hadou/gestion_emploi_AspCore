
@{
    ViewData["Title"] = "Programer_Emploi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("Programer_emploi_etap1", "Admin", FormMethod.Post, new { @class = "myForm" }))
        {

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Programer Emploi</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="largeSelect">@Html.Label("classe", "Classe :")</label>

                    @Html.DropDownList("classe", ViewBag.classes as SelectList, "Sélectionner une classe",new{@class="form-control form-control-sm"})

                </div>
                <div class="form-group">
                    <label for="largeSelect">
                        @Html.Label("semaine", "Semaine :")
                    </label>

                    @Html.DropDownList("semaine", ViewBag.semaines as SelectList, "Sélectionner une semaine",new{@class="form-control form-control-sm"})

                </div>
                <div class="form-group">
                    <label for="largeSelect">
                        @Html.Label("annee", "Année universitaire :")
                    </label>

                    @Html.DropDownList("annee", ViewBag.annees as SelectList, "Sélectionner une année",new{@class="form-control form-control-sm"})

                </div>
            </div>
            <div class="card-action">
                <button class="btn btn-success" type="submit">Afficher</button>
                <button class="btn btn-danger" type="reset">Annuler</button>
            </div>
        </div>
    </div>
</div>

}



