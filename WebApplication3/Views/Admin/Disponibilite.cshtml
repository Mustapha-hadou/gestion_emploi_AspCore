
@{
    ViewData["Title"] = "Programer_Emploi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("dispo", "Admin", FormMethod.Post, new { @class = "myForm" }))
{

    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">vérifier disponibilité</div>
                </div>
                <div class="card-body">

                    <div class="form-group">
                        <label for="largeSelect">
                            @Html.Label("heur", "Heures :")
                        </label>
                        <div class="form-control form-control-sm">

                            @Html.DropDownList("heures", "Sélectionner l'heure")
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="largeSelect">
                            @Html.Label("jour", "Jours de la semaine :")
                        </label>
                        <div class="form-control form-control-sm">
                            @Html.DropDownList("jours", "Sélectionner le jour")
                        </div>



                    </div>
                    <div class="form-group">
                        <label for="largeSelect">
                            @Html.Label("semaine", "Semaine :")
                        </label>
                        @Html.DropDownList("semaine", ViewBag.semaines as SelectList, "Sélectionner une semaine", new { @class = "form-control form-control-sm" })


                    </div>
                    <div class="form-group">
                        <label for="largeSelect">
                            @Html.Label("annee", "Année universitaire :")
                        </label>
                        @Html.DropDownList("annee", ViewBag.annees as SelectList, "Sélectionner une année", new { @class = "form-control form-control-sm" })


                    </div>
                </div>
                <div class="card-action">
                    <button class="btn btn-success" type="submit">Afficher</button>
                    <button class="btn btn-danger" type="reset">Annuler</button>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-2">

    </div>
}







